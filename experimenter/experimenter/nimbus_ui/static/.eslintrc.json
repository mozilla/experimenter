{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "$": "readonly",
    "require": "readonly",
    "module": "readonly",
    "__dirname": "readonly"
  },
  "ignorePatterns": ["dist/"]
}
